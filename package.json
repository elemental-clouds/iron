{
  "author": "lstatro",
  "bugs": {
    "url": "https://github.com/lstatro/iron/issues"
  },
  "dependencies": {
    "@elemental-clouds/hydrogen": "^0.0.8"
  },
  "description": "AWS inventory and compliance scanning CLI",
  "devDependencies": {
    "@types/node": "^18.7.8",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "eslint": "^8.23.1",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/**/*"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "homepage": "https://github.com/lstatro/iron#readme",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/src/**/*.test.ts"
    ],
    "transform": {
      ".ts": "ts-jest"
    }
  },
  "keywords": [],
  "license": "MIT",
  "main": "src/index.js",
  "name": "@elemental-clouds/iron",
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true,
    "tabWidth": 2
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elemental-clouds/iron.git"
  },
  "scripts": {
    "build": "rm -rf ./build && tsc --project tsconfig.build.json && cp package.json ./build && cp ./README.md ./build && cp ./.npmignore ./build",
    "format": "npx prettier --check ./",
    "lint": "eslint . --ext .ts",
  },
  "version": "0.0.0"
}
